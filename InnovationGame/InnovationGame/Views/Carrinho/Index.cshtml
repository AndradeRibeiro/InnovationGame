@{
    ViewData["Title"] = "Carrinho";
}
<html>
    <head>
        <style>
            .actions {
                display: flex;
                justify-content: flex-end;
            }
            .corBotao {
                background-color: #6342a6;
                color: white;
                border-color: #6342a6;
            }
        </style>
    </head>

    <body>
        <div>
            <form method="post" action="Carrinho/ConfirmarCompra">
                <input type="hidden" name="CodeId" value="@ViewData["CodeId"]" />
                <div class="row" style="height: 135px; background-color: #F7F7F7;">
                    <div class="col-4 col-sm-2">
                        <div id="imagemProduto" class="text-center mt-3">
                            <img class="prdcss" src="@ViewData["ProdutoFoto"]" style="height: 100px;border: 2px solid #6342A6;height: 100px;border-radius: 26px;" />
                        </div>
                    </div>
                    <div class="col-8 col-sm-2">
                        <div id="descricaoProduto" class="text-center mt-3 mb-1">
                            <label>@ViewData["ProdutoNome"]</label>
                        </div>

                        <div id="precoProduto" class="text-center mb-4">
                            <label>@ViewData["ProdutoPreco"]</label>
                        </div>
                    </div>
                    <div class="input-group" style="margin-left: 200px; width: 95px; margin-top: -45px;">
                        <span class="input-group-btn">
                            <button type="button" class="btn btn-danger btn-number" data-type="minus" data-field="quant[2]">
                                <span class="glyphicon glyphicon-minus" style="font-weight: bolder">-</span>
                            </button>
                        </span>
                        <input type="text" name="quant[2]" class="form-control input-number" value="1" min="1" max="100">
                        <span class="input-group-btn">
                            <button type="button" class="btn btn-success btn-number" data-type="plus" data-field="quant[2]">
                                <span class="glyphicon glyphicon-plus" style="font-weight: bolder">+</span>
                            </button>
                        </span>
                    </div>
                </div>
                <div class="form-group" style="margin-top: 40px;">
                    <div class="row">
                        <div class="col-12 col-sm-10">
                            <label for="endereco">Endereço</label>
                            <input type="text" class="form-control" id="endereco" name="Endereco" onchange="salvaCampo(this)">
                        </div>
                        <div class="col-6 col-sm-3">
                            <label for="numero">Número</label>
                            <input type="text" class="form-control" id="numero" name="Numero" onchange="salvaCampo(this)">
                        </div>
                        <div class="col-6 col-sm-3">
                            <label for="cep">Cep</label>
                            <input type="text" class="form-control" id="cep" name="CEP" onchange="salvaCampo(this)">
                        </div>


                        <div class="col-6 col-sm-3">
                            <label for="estado">Estado</label>
                            <input type="text" class="form-control" id="estado" name="Estado" onchange="salvaCampo(this)">
                        </div>

                        <div class="col-6 col-sm-3">
                            <label for="cidade">Cidade</label>
                            <input type="text" class="form-control" id="cidade" name="Cidade" onchange="salvaCampo(this)">
                        </div>
                    </div>
                </div>
                <div class="form-group" style="margin-top: 40px;">
                    <div class="row">
                        <div class="col-12 col-sm-4">
                            <label for="nome">Nome no cartão</label>
                            <input type="text" class="form-control" id="nome" name="NomeCartao"  onchange="salvaCampo(this)">
                        </div>

                        <div class="col-12 col-sm-4">
                            <label for="numeroCartao">Numero do cartão</label>
                            <input type="text" class="form-control" id="numeroCartao" name="CartaoCredito" onchange="salvaCampo(this)">
                        </div>

                        <div class="col-6 col-sm-2">
                            <label for="dataValidade">Validade</label>
                            <input type="text" class="form-control" id="dataValidade" name="CartaoVencimento" onchange="salvaCampo(this)">
                        </div>

                        <div class="col-6 col-sm-2">
                            <label for="cardCvv">CVV</label>
                            <input type="text" class="form-control" id="cardCvv" name="CartaoCVV">
                        </div>
                    </div>
                </div>
                <div class="form-group" style="margin-top: 40px;">
                    <div class="row">
                        <div class="col-12 col-sm-2">
                            <label for="celular">Celular</label>
                            <input type="text" class="form-control" id="celular" name="Celular" onchange="salvaCampo(this)">
                        </div>
                    </div>
                </div>
                <div class="mt-4 mb-5 actions">
                    <button id="submit" class="btn corBotao btn-lg" type="submit">Finalizar</button>
                </div>

            </form>
        </div>
    </body>
</html>

<script type="text/javascript">

    function salvaCampo(campo) {
        console.log(campo.name + ":" + campo.value);
        localStorage[campo.name] = campo.value;
    }

    $(function () {
        $("#endereco").val(localStorage["Endereco"])
        $("#numero").val(localStorage["Numero"])
        $("#cep").val(localStorage["CEP"])
        $("#cidade").val(localStorage["Cidade"])
        $("#estado").val(localStorage["Estado"])
        $("#nome").val(localStorage["NomeCartao"])
        $("#numeroCartao").val(localStorage["CartaoCredito"])
        $("#dataValidade").val(localStorage["CartaoVencimento"])
        $("#celular").val(localStorage["Celular"])
    })

    $('.btn-number').click(function (e) {
        e.preventDefault();

        fieldName = $(this).attr('data-field');
        type = $(this).attr('data-type');
        var input = $("input[name='" + fieldName + "']");
        var currentVal = parseInt(input.val());
        if (!isNaN(currentVal)) {
            if (type == 'minus') {

                if (currentVal > input.attr('min')) {
                    input.val(currentVal - 1).change();
                }
                if (parseInt(input.val()) == input.attr('min')) {
                    $(this).attr('disabled', true);
                }

            } else if (type == 'plus') {

                if (currentVal < input.attr('max')) {
                    input.val(currentVal + 1).change();
                }
                if (parseInt(input.val()) == input.attr('max')) {
                    $(this).attr('disabled', true);
                }

            }
        } else {
            input.val(0);
        }
    });

    $('.input-number').focusin(function () {
        $(this).data('oldValue', $(this).val());
    });

    $('.input-number').change(function () {

        minValue = parseInt($(this).attr('min'));
        maxValue = parseInt($(this).attr('max'));
        valueCurrent = parseInt($(this).val());

        name = $(this).attr('name');
        if (valueCurrent >= minValue) {
            $(".btn-number[data-type='minus'][data-field='" + name + "']").removeAttr('disabled')
        } else {
            alert('Sorry, the minimum value was reached');
            $(this).val($(this).data('oldValue'));
        }
        if (valueCurrent <= maxValue) {
            $(".btn-number[data-type='plus'][data-field='" + name + "']").removeAttr('disabled')
        } else {
            alert('Sorry, the maximum value was reached');
            $(this).val($(this).data('oldValue'));
        }

    });

    $(".input-number").keydown(function (e) {
        // Allow: backspace, delete, tab, escape, enter and .
        if ($.inArray(e.keyCode, [46, 8, 9, 27, 13, 190]) !== -1 ||
            // Allow: Ctrl+A
            (e.keyCode == 65 && e.ctrlKey === true) ||
            // Allow: home, end, left, right
            (e.keyCode >= 35 && e.keyCode <= 39)) {
            // let it happen, don't do anything
            return;
        }
        // Ensure that it is a number and stop the keypress
        if ((e.shiftKey || (e.keyCode < 48 || e.keyCode > 57)) && (e.keyCode < 96 || e.keyCode > 105)) {
            e.preventDefault();
        }
    });

</script>

